@model NNPEFWEB.ViewModel.ComfirmEmail
@{
    ViewData["Title"] = "VerifyCode";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}



<div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
   
    <div class="card card0 border-0">
        <div class="row d-flex">
            <div class="col-lg-6">
                <div class="card1 pb-5">
                    <div class="row px-3 justify-content-center mt-4 mb-5 border-line">
                    <img src="~/Image/navylogo2.png" class="logo">

                    </div>
                </div>
            </div>
            <section>
                <form id="account" method="post">
                    <h1>Send Verify Code</h1>
                    
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="mb-4 form-styling" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>



                    <div class="form-group">
                        <button type="submit" class="btn-signin text-center">Send Verification</button>
                    </div>

                </form>
            </section>
        </div>
        <div class="col-lg-6">
            <div class="card1 pb-5">
               <div style="height:200px"></div>
            </div>
        </div>
        <div class="bg-blue py-4">
            <div class="row px-3">
                <small class="ml-4 ml-sm-5 mb-2">Copyright &copy; 2019. All rights reserved.</small>

            </div>
        </div>
    </div>

</div>
