@model NNPEFWEB.ViewModel.personLoginVM
@using Microsoft.AspNetCore.Http
@{
    //ViewData["Title"] = "Login"
    Layout = null;
}
<link href="~/css/logintemplate.css" rel="stylesheet" />
<link href="~/css/bootstrap.css" rel="stylesheet" />
<script src="~/js/loginjs.js"></script>
<link href="~/css/font-awsome.css" rel="stylesheet" />
<script src="~/js/jQuery.js"></script>
<div class="imagebackground">
    <div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
        <h3 style="color:brown">@Context.Session.GetString("Resetmessage")</h3>
               <div class="card card0 border-0">
            <div class="row d-flex">
                <div class="col-lg-6">
                    <div class="card1 pb-5">
                        @*<div class="row">
                            <img src="~/Image/navylogo2.png" class="logo">
                        </div>*@
                        <div class="row px-3 justify-content-center mt-4 mb-5 border-line">
                            <img src="~/Image/navylogo2.png" class="logo">
                            <h3 class="mb-0 mr-4 mt-2">Sign in With Your SVC as Username and Password</h3>
                            <h3 class="mb-0 mr-4 mt-2">To Fill Your Emolument Form</h3>
                            @*<img src="~/Image/officers.jpg" class="image">*@
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card2 card border-0 px-4 py-5">
                        <div class="row mb-4 px-3">
                            <h3 class="mb-0 mr-4 mt-2">Sign in Here</h3>

                        </div>
                        @if (@TempData["errorMessage"] != null)
                        {
                        <div id="alert_div" class="alert alert-danger alert-dismissible fade show" role="alert">
                            <h2 style="color:#ff0000">  @TempData["errorMessage"]</h2>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        }
                        <div class="row px-3 mb-4">
                            <div class="line"></div>
                            <div class="line"></div>
                        </div>
                        <form id="account" method="post">

                            <div class="row px-3">
                                <label class="mb-1">
                                    <h6 class="mb-0 text-sm">User Name</h6>
                                </label>
                                <input asp-for="userName" class="mb-4 form-styling" required />
                            </div>
                            <div class="row px-3">
                                <label class="mb-1">
                                    <h6 class="mb-0 text-sm">Password</h6>
                                </label>
                                <input asp-for="password" type="password" class="mb-4 form-styling" required />
                                @*<input type="password" name="password" placeholder="Enter password">*@
                            </div>
                            <div class="row px-3 mb-4">
                                <div class="custom-control custom-checkbox custom-control-inline"> 
                                <input id="chk1" type="checkbox" name="chk" class="custom-control-input"> 
                                <label for="chk1" class="custom-control-label text-sm">Remember me</label>
                                    </div> <a href="@Url.Action("ResetPasswordServiceNumber","PersonnelLogin")" class="ml-auto mb-0 text-sm">Forgot Password?</a>
                            </div>
                            <div class="row mb-3 px-3">
                                <button type="submit" class="btn-signin text-center">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="bg-blue py-4">
                <div class="row px-3">
                    <small class="ml-4 ml-sm-5 mb-2">Copyright &copy; 2019. All rights reserved.</small>

                </div>
            </div>
        </div>
    </div>
</div>
@if (@Context.Session.GetString("statusMessage") != null)
{
    <script>
        alert("You have submitted your form already");
    </script>
}
<div class="alert-default-warning">
    @if (@Context.Session.GetString("InvalidPassword") != null)
    {
        @Context.Session.GetString("InvalidPassword");
        <script>
            alert("Invalid User Name or Password");
        </script>
    }
</div>
<script>
    $('.alert').alert()
    $(function () {
        $(".btn").click(function () {
            $(".form-signin").toggleClass("form-signin-left");
            $(".form-signup").toggleClass("form-signup-left");
            $(".frame").toggleClass("frame-long");
            $(".signup-inactive").toggleClass("signup-active");
            $(".signin-active").toggleClass("signin-inactive");
            $(".forgot").toggleClass("forgot-left");
            $(this).removeClass("idle").addClass("active");
        });
    });

    $(function () {
        $(".btn-signup").click(function () {
            $(".nav").toggleClass("nav-up");
            $(".form-signup-left").toggleClass("form-signup-down");
            $(".success").toggleClass("success-left");
            $(".frame").toggleClass("frame-short");
        });
    });

    $(function () {
        $(".btn-signin").click(function () {
            $(".btn-animate").toggleClass("btn-animate-grow");
            $(".welcome").toggleClass("welcome-left");
            $(".cover-photo").toggleClass("cover-photo-down");
            $(".frame").toggleClass("frame-short");
            $(".profile-photo").toggleClass("profile-photo-down");
            $(".btn-goback").toggleClass("btn-goback-up");
            $(".forgot").toggleClass("forgot-fade");
        });
    });
</script>