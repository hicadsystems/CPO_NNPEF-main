                        </select>
                        <span asp-validation-for="nok_relation" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Address</label>
                        <input asp-for="nok_address" class="form-control" />
                        <span asp-validation-for="nok_address" class="text-danger"></span>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label class="control-label">Phone Number</label>
                        <input asp-for="nok_phone" class="form-control" />
                        <span asp-validation-for="nok_phone" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Email</label>
                        <input asp-for="nok_email" class="form-control" />
                        <span asp-validation-for="nok_email" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">National Identification No</label>
                        <input asp-for="nok_nationalId" class="form-control" />
                        <span asp-validation-for="nok_nationalId" class="text-danger"></span>
                    </div>


                </div>


                <div class="row">
                    <h2 style="">
                        <label class="control-label">Alternate Next Of Kin</label>
                    </h2>
                </div>
                <div class="row">

                    <div class="col-md-4">
                        <label class="control-label">Name</label>
                        <input asp-for="nok_name2" class="form-control" />
                        <span asp-validation-for="nok_name2" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Relationship</label>
                        <select asp-for="nok_relation2"
                                class="form-control"
                                asp-items="@(new SelectList(Model.nok_relation2List,"Value", "Text"))">
                        </select>
                        <span asp-validation-for="nok_relation2" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Address</label>
                        <input asp-for="nok_address2" class="form-control" />
                        <span asp-validation-for="nok_address2" class="text-danger"></span>
                    </div>


                </div>
                <div class="row">

                    <div class="col-md-4">
                        <label class="control-label">Phone Number</label>
                        <input asp-for="nok_phone2" class="form-control" />
                        <span asp-validation-for="nok_phone2" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Email</label>
                        <input asp-for="nok_email2" class="form-control" />
                        <span asp-validation-for="nok_email2" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">National Identification No</label>
                        <input asp-for="nok_nationalId2" class="form-control" />
                        <span asp-validation-for="nok_nationalId2" class="text-danger"></span>
                    </div>
                </div>

                <hr />
                <div class="row">
                    <h2 style="">
                        <label class="control-label">Bank Details</label>
                    </h2>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label class="control-label">Salary Account Name</label>
                        <input asp-for="AccountName" class="form-control" />
                        <span asp-validation-for="AccountName" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Bank Name</label>
                        <select asp-for="Bankcode"
                                class="form-control"
                                asp-items="@(new SelectList(Model.bankList,"Value", "Text"))">
                        </select>
                        <span asp-validation-for="Bankcode" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="bankbranch" class="control-label"></label>
                        <input asp-for="bankbranch" class="form-control" />
                        <span asp-validation-for="bankbranch" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="BankACNumber" class="control-label"></label>
                        <input asp-for="BankACNumber" class="form-control" />
                        <span asp-validation-for="BankACNumber" class="text-danger"></span>
                    </div>

                </div>
                <hr />
                @if (Model.Status == null || Model.Status == "DO" || Model.Status == "CDR")
                {
                    <div class="row">
                        <div class="col-md-4">
                            <label class="control-label">DO Name</label>
                            <input asp-for="div_off_name" class="form-control" />
                            <span asp-validation-for="div_off_name" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label class="control-label">DO Rank</label>
                            <select asp-for="div_off_rank"
                                    class="form-control"
                                    asp-items="@(new SelectList(Model.rankList, "Value", "Text"))">
                            </select>
                            <span asp-validation-for="div_off_rank" class="text-danger"></span>
                        </div>
