@model IEnumerable<NNPEFWEB.Models.ef_personalInfo>
@using Microsoft.AspNetCore.Authorization



<h1>Personnel List</h1>

@*@using (Html.BeginForm("UpdatePersonelList", "PersonalInfo", FormMethod.Get, new { enctype = "multipart/form-data" }))
{*@
<form asp-action="UpdatePersonelList" asp-controller="PersonalInfo">
    <div class="row">
        <div class="col-md-4">
            <input type="text" name="svcno" id="svcno" class="form-control" />
        </div>

        <div class="col-md-4">
            <input type="submit" class="btn btn-primary" value="Search" />
        </div>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Rank</th>
            <th>Service No</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Ship</th>
            <th>Command</th>
            @* <th>Appointment</th>*@

            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var r in Model)
        {
<tr>
    <td>@r.Rank</td>
    <td>@r.serviceNumber</td>
    <td>@r.Surname</td>
    <td>@r.OtherName</td>
    <td>@r.ship</td>
    <td>@r.command</td>

    <td>
        @if (r.classes == 1)
        {
<a asp-controller="PersonalInfo" asp-action="ViewPersonel" asp-route-svcno="@r.serviceNumber" class="btn btn-success">Preview Record</a>}
        @if (r.classes == 2)
        {
<a asp-controller="PersonalInfo" asp-action="ViewPersonelRating" asp-route-svcno="@r.serviceNumber" class="btn btn-success">Preview Record</a>}
        @if (r.classes == 3)
        {
<a asp-controller="PersonalInfo" asp-action="ViewPersonelTraining" asp-route-svcno="@r.serviceNumber" class="btn btn-success">Preview Record</a>}
    </td>
    <td>
        <form method="post" asp-action="RatingReport" asp-controller="Reports" asp-route-svcno="@r.serviceNumber">
            <input type="submit" class="btn btn-success" value="Print"
                   @{ if (r.Status != "CDR") { @: disabled="disabled"
                   } } />
        </form>
    </td>

</tr>         if (Model.Count() == 0)
                {
                    <tr>No Record Found</tr>
                }
}
    </tbody>
</table>
