@model NNPEFWEB.ViewModel.PaginatedList<NNPEFWEB.Models.ef_personalInfo>
@using Microsoft.AspNetCore.Authorization
@{
    ViewData["Title"] = "All Staff List";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Rank</th>
            <th>Service No</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Ship</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Rank</td>
                <td>@r.serviceNumber</td>
                <td>@r.Surname</td>
                <td>@r.OtherName</td>
                <td>@r.ship</td>
            </tr>
        }
    </tbody>
</table>

@*pagination buttons starts here*@

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="YetToFillStaffRatingsList" media="get" asp-controller="Home"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="YetToFillStaffRatingsList" media="get" asp-controller="Home"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   class="btn btn-default @nextDisabled">
    Next
</a>