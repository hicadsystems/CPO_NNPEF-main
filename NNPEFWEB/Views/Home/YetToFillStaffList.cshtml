@model NNPEFWEB.ViewModel.PaginatedList<NNPEFWEB.Models.ef_personalInfo>
@{
    ViewData["Title"] = "Yet To Fill Staff List";
}

<h2>Officers Yet To Fill Form</h2>
<br />

<table class="table">
    <thead>
        <tr>
            <th scope="col">SERVICE NUMBER</th>
            <th scope="col">FULL NAME</th>
            <th scope="col">SHIP</th>
            <th scope="col">DATE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <th scope="row">@person.serviceNumber</th>
                <td>@person.OtherName</td>
                <td>@person.ship</td>
                <td>@person.DateEmpl</td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="YetToFillStaffList" media="get" asp-controller="Home"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="YetToFillStaffList" media="get" asp-controller="Home"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   class="btn btn-default @nextDisabled">
    Next
</a>