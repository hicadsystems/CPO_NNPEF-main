@model IEnumerable<NNPEFWEB.Models.ef_personalInfo>
@using Microsoft.AspNetCore.Authorization

@{ ViewData["Title"] = "UpdatedPersonelByCPO"; }



<h1>Personnel  List</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="UpdatedPersonelByCPO" method="get" asp-controller="CPOUpdate">
            <div class="row">
                <div class="col-md-4">
                    <label class="control-label">Ship</label>
                    <select name="ship"
                            class="form-control"
                            asp-items="@(new SelectList(ViewBag.ShipList,"Value", "Text"))">
                    </select>
                </div>

                <div class="col-md-4" style="margin-top:30px">
                    <input type="submit" class="btn btn-primary" value="Search" />
                </div>
            </div>
        </form>
    </div>
    
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Rank</th>
            <th>Service No</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Ship</th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var r in Model)
        {
<tr>
    <td>@r.Rank</td>
    <td>@r.serviceNumber</td>
    <td>@r.Surname</td>
    <td>@r.OtherName</td>
    <td>@r.ship</td>
    <td>
    <td>
        @if (r.classes == 1)
        {
<a asp-controller="CPOUpdate" asp-action="UpdatePersonelByCPO" asp-route-id="@r.Id" class="btn btn-success">[ACCEPT]</a>                }
        @if (r.classes == 2)
        {
<a asp-controller="CPOUpdate" asp-action="UpdatePersonelByCPO" asp-route-id="@r.Id" class="btn btn-success">[ACCEPT]</a>                }
        @if (r.classes == 3)
        {
<a asp-controller="CPOUpdate" asp-action="UpdatePersonelByCPO" asp-route-id="@r.Id" class="btn btn-success">[ACCEPT]</a>                }
    </td>


</tr>}
    </tbody>
</table>