@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "SiteActivities";
}

<section class="content">
    <div class="container-fluid">
        <!-- SELECT2 EXAMPLE -->
        <div class="card card-default">
            <div class="card-header">
                @*<h3 class="card-title">Select2 (Default Theme)</h3>*@
                <div>
                    @if (Context.Session.GetInt32("Site") != null || Context.Session.GetInt32("Site") != 0)
                    {
                        <h1>Site Has Been Close, Select Open To Reopen</h1>
                    }
                </div>
                <form method="post">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-5">
                                <select class="form-control" name="SiteStatus">
                                    <option></option>
                                    <option value="0">Open Emolument Form</option>
                                     <option value="1">Open Emolument To Command</option>
                                </select>


                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-sm-4">
                                <label class="control-label">Start Date</label>
                                <input name="opendate" class="form-control" id="startdate" type="text" />
                            </div>
                            <div class="col-sm-4">
                                <label class="control-label">End Date</label>
                                <input name="cloasedate" class="form-control" id="enddate" type="text" />

                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-sm-4">
                                <input type="submit" class="btn btn-success" value="Proceed>>>" />
                            </div>
                        </div>
                        </div>
                </form>



            </div>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
<!-- Third party plugin JS-->
<script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>
<!-- Contact form JS-->
<script src="~/assets/mail/jqBootstrapValidation.js"></script>
<script src="~/assets/mail/contact_me.js"></script>
<script src="~/js/datepicker1.js"></script>
<script src="~/js/datepicker2.js"></script>
<!-- Core theme JS-->
<script src="~/js/scripts.js"></script>
<script>

    $(function () {
        $("#startdate").datepicker();
        $("#enddate").datepicker();
    }
</script>